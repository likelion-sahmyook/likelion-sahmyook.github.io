<%= render '/posts/logo' %>
<div class="d_main">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="d_inputbox">
        <%= f.input :email, required: false, autofocus: true, label: '이메일' %>
        <%= f.input :password, required: false, label: '비밀번호' %>
      </div>
      <div class="d_rememberbox">
        <%= f.input :remember_me, label: '비밀번호 저장', as: :boolean if devise_mapping.rememberable? %>
      </div>
      
      <div class="d_button">
        <div class="form-actions">
          <%= f.button :submit, "로그인", class:"btn btn-primary" %>
        </div>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
<%= render '/posts/footer' %>


